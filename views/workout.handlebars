
<div class="card">
 
  <div class="card-content">
    <div class="media">
      <div class="media-left">
       
      </div>
      <div class="media-content">
        <p class="title is-4">{{workout.title}} </p>
        <p id="category">Category: {{workout.category.name}}</p>
        
        <p id="wd">{{workout.description}}</p>
        <p id="profileUser" class="fas fa-user"> By: <a href="/profile/{{workout.user.id}}">{{workout.user.name}}</a> </p>
        <p>On: {{format_date workout.createdAt}}</p>
        
  </div>
      </div>
    </div>

    <div class="content">
      <div class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Are you sure you want to delete your workout?</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <footer class="modal-card-foot">
      <button class="button is-rounded is-dark confirm-button">Yes, Delete it</button>
      <button class="button is-rounded is-light cancel-delete-button">No! Go
        back!</button>
    </footer>
  </div>
</div>

<div class="hide comment" id="addComment">
  <h2>Add your comment</h2>
  <form class="form1 comment-form">
    <div class="form-group">
      <label for="comment">Comment:</label>
      <input class="form-input" type="text" id="comment-description" />
    </div>
    <div class="form-group">
      <button id="addCom"
        class="btn button is-small is-light is-rounded"
        type="submit"
      >Add New Comment</button>
    </div>
  </form>
</div>

<div id="buttons">
  {{#if loggedIn}}
    <button
      class="btn button is-small is-dark is-rounded"
      id="comment-button"
    >Add Comment</button>

    {{#if postLiked}}
      <button
        class="btn button is-small is-dark is-rounded fas fa-grin-wink"
        id="liked-button"
      >ðŸ’–</button>
    {{else}}
      <button
