        id="unliked-button"
      >ðŸ’¥</button>
    {{/if}}

  {{/if}}

  {{#if (if_equals workout.user.id userId)}}
    <button class="btn button is-small is-dark is-rounded" id="update-button">Update</button>
    <button class="btn button is-small is-dark is-rounded" id="delete-button">Delete</button>
  {{/if}}
</div>

<h2 id="comments">Comments</h2>
{{#each comments as |userComment|}}
