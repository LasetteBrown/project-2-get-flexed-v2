     <div id="blog-description">
      <p>{{comment}}</p>
    </div>
    <div class="display-flex" id="blog-title">
      <p>By:<a href="/profile/{{user.id}}"> {{user.name}}</a> 
      On: {{format_date createdAt}}</p>
    </div>
   
  </div>
{{/each}}

<div class="hide comment" id="form-page">
  <h2>Add your comment</h2>
  <form class="form comment-form">
    <div class="form-group">
      <label for="comment">Comment:</label>
      <input class="form-input" type="text" id="comment-description" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Add</button>
    </div>
  </form>
</div>
