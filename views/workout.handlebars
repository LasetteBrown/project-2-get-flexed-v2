<div class="card">
    <div class="card-content">
        <h3>{{workout.title}}</h3>
        <p>By: {{workout.user.name}}     On: {{format_date workout.createdAt}}</p>
        </p>
    
        <p>Category: {{workout.category.name}}</p>
    </div>
    <div>
        <p>{{workout.description}}</p>
    </div>




<h2 class="comments">Comments</h2>
{{#each comments as |userComment|}}
<div class="blog-post col-5">
    <div id='blog-description'>
        <p class="comment-text">{{comment}}</p>
    </div>
    <div class="display-flex" id="blog-title">
        <p>By: {{user.name}} On: {{format_date createdAt}}</p>
    </div>
    
</div>
{{/each}}




<div class='hide comment' id="form-page">
    <h2>Add your comment</h2>
    <form class="form comment-form">
        <div class="form-group">
            <label for="comment">Comment:</label>
            <input class="form-input" type="text" id="comment-description" />
        </div>
        <div class="form-group">
            <button class="btn button is-small is-dark is-rounded" type="submit">Add</button>
        </div>
    </form>
</div>



<div id='buttons'>
    {{#if loggedIn}}
    <button class="btn button is-small is-dark is-rounded" id="comment-button">Add Comment</button>
    {{/if}}

    {{#if (if_equals workout.user.id userId)}}
    <button class="btn button is-small is-dark is-rounded" id="update-button">Update</button>
    <button class="btn button is-small is-dark is-rounded" id="delete-button">Delete</button>
    {{/if}}
    
</div>

</div>

{{#if (if_equals workout.user.id userId)}}
  <script src="/js/updateDeleteWorkout.js"></script>
{{/if}}

<script src='/js/commentWorkout.js'></script>




